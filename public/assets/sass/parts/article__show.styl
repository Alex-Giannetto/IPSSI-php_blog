.articlePage
    padding-top 3em
    display flex
    align-items center
    flex-direction column

    .article__cards
        background-color #f5f5f5
        margin-bottom 4em
        width 60%
        min-height 200px
        padding 1em 2.5em 2.5em 2.5em
        box-shadow 0px 14px 80px rgba(34, 35, 58, 0.3)
        border-radius 25px

        @media screen and (min-width: 1550px)
            width: 45%


        .cards
            &__date
                font-size 1em
                color #7C7992
                font-weight 700

            &__title
                font-size 2.7em
                font-weight 700
                margin 1em 0

            &__image
                width: calc(100% + 5em)
                transform translateX(-2.5em)
                height 400px
                margin 3em 0
                background-size cover
                background-repeat: no-repeat
                background-position: center
                background-color: #F5F5F5
                background-image: url(http://lorempicsum.com/futurama/800/400/2)
                transition: all .3s 0s

                &:hover
                    transform translateX(-2.5em) scale(1.15)
                    box-shadow 0px 14px 20px rgba(34, 35, 58, 0.5)
                    transition: all .3s .3s

            &__text
                color #4e4a67
                margin-bottom 30px
                font-size 1.3em
                line-height 1.5em

.buttons
    display: grid
    width 70%
    margin-left 15%
    grid-template-columns 1fr 1fr
    grid-gap 1em
    z-index 99999
    position sticky
    bottom: 1em
    padding 1em 1em
    background-color: rgba(#F5F5F5, .9)
    backdrop-filter blur(3px)
    border-radius 55px

    &--one
        width 40%
        margin-left 30%
        grid-template-columns 1fr


    .button
        padding 15px 35px
        background-size 200% auto
        color #fff
        text-align center
        font-size 1em
        font-weight 500
        letter-spacing 1px
        text-transform uppercase
        border none
        border-radius 50px
        transition: all .3s

        &:hover
            background-position center right
            transform scale(1.05)

        &--add
            background-image linear-gradient(147deg, #00C4B4 0%, #018786 50%, #00C4B4 100%)
            box-shadow 0px 10px 20px rgba(#00C4B4, 0.2)

        &--modify
            background-image linear-gradient(147deg, #63A1F8 0%, #2A74C0 50%, #63A1F8 100%)
            box-shadow 0px 10px 20px rgba(#63A1F8, 0.2)

        &--delete
            background-image linear-gradient(147deg, #FF8239 0%, #FD3F38 50%, #FF8239 100%)
            box-shadow 0px 10px 20px rgba(#FF8239, 0.2)
