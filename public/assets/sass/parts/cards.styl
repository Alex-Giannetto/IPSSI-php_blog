.ArticleslistPage
    .articles
        display flex
        align-items center
        flex-direction column

        &__cards
            background-color #f5f5f5
            margin-bottom 4em
            width 60%
            min-height 200px
            padding 2.5em
            box-shadow 0px 14px 80px rgba(34, 35, 58, 0.3)
            border-radius 25px
            @media screen and (min-width: 1550px)
                width: 45%


            .cards__content
                width 115%
                display grid
                grid-gap 3.5em
                transform translateX(-15%)

                grid-template-columns 250px 1fr
                grid-template-areas 'photo info'

                .cards__image
                    height 250px
                    grid-area photo
                    background-image: url(http://lorempicsum.com/futurama/250/250/2)
                    background-size: cover
                    box-shadow 4px 13px 30px 1px rgba(252, 56, 56, 0.2)
                    border-radius 25px
                    overflow hidden
                    position relative

                    &::after
                        content: ''
                        position absolute
                        top: 0
                        left: 0
                        width 250px
                        height: 250px
                        opacity: .7
                        background-image linear-gradient(145deg, #FFE03C, #FE3838)



                .cards__info
                    grid-area info
                    display flex
                    flex-direction column

                    &__date
                        font-size 1em
                        color #7C7992
                        font-weight 700

                    &__title
                        font-size 2.2em
                        font-weight 700
                        margin 0

                    &__text
                        color #4e4a67
                        margin-bottom 30px
                        line-height 1.5em

                    &__comments
                        display block
                        font-size 1em
                        text-transform uppercase
                        color #fff
                        width 200px
                        text-decoration none
                        font-weight 500
                        text-align center
                        letter-spacing 1px
                        border none
                        border-radius 50px
                        background-image linear-gradient(147deg, #fe8a39 0%, #fd3838 50%, #fe8a39 100%)
                        background-size 200% auto
                        box-shadow 0px 14px 40px rgba(252, 56, 56, 0.3)
                        padding 15px 35px
                        justify-content center
                        align-self center
                        transition: all .3s

                        &:hover
                            background-position center right
                            transform scale(1.05)

        &__cards--right
            .cards__content
                transform translateX(0)
                grid-template-columns 1fr 250px
                grid-template-areas 'info photo'

