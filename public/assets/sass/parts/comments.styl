.commentsComponent
    display flex
    align-items center
    flex-direction column

    .comments__cards
        background-color #f5f5f5
        margin-bottom 4em
        width 60%
        min-height 200px
        padding 2.5em
        box-shadow 0px 14px 80px rgba(34, 35, 58, 0.3)
        border-radius 25px
        @media screen and (min-width: 1550px)
            width: 45%

        &:hover .cards__name
            background-position right

        .cards__content
            width 110%
            display grid
            grid-gap 3.5em
            transform translateX(-10%)

            grid-template-columns 150px 1fr
            grid-template-areas 'photo info'

            .cards__name
                height 150px
                grid-area photo
                background-image linear-gradient(147deg, #fe8a39 0%, #fd3838 50%, #fe8a39 100%)
                background-size: 200%
                box-shadow 4px 13px 30px 1px rgba(252, 56, 56, 0.2)
                border-radius 25px
                overflow hidden
                position relative
                line-height 150px
                text-align center
                font-size 4em
                color: white
                transition all .3s
                text-transform uppercase
                letter-spacing 1px

            .cards__info
                grid-area info
                display flex
                flex-direction column

                &__text
                    color #4e4a67
                    margin-bottom 30px
                    line-height 1.5em

                header
                    display grid
                    grid-template-columns 2fr 120px

                    .cards__info__date
                        font-size 1em
                        color #7C7992
                        font-weight 700
                        margin 0
                        line-height 2em
                        text-align right

                    .cards__info__name
                        font-size 2.2em
                        font-weight 700
                        line-height 1em
                        margin 0

                .center
                    text-align center

                &__comments
                    display inline-block
                    font-size 1em
                    text-transform uppercase
                    color #fff
                    width 200px
                    text-decoration none
                    font-weight 500
                    text-align center
                    letter-spacing 1px
                    border none
                    border-radius 50px
                    background-image linear-gradient(147deg, #fe8a39 0%, #fd3838 50%, #fe8a39 100%)
                    background-size 200% auto
                    box-shadow 0px 14px 40px rgba(252, 56, 56, 0.3)
                    padding 15px 35px
                    justify-content center

                    align-self center
                    transition: all .3s

                    &:hover
                        background-position center right
                        transform scale(1.05)