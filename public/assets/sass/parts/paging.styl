.paging
    display flex
    flex-direction row
    align-items center
    justify-content center
    margin-bottom 10vh

    .page
        border-radius 50000px
        width 30px
        height 30px
        margin 0 .5em
        color white
        line-height 30px
        text-align center
        background-image linear-gradient(147deg, #fe8a39 0%, #fd3838 50%, #fe8a39 100%)
        background-size: 200%
        background-position: left


        &.active
            width 70px
            box-shadow 0px 5px 20px rgba(252, 56, 56, 0.3)
            background-position: right

